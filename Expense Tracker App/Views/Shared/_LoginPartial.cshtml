@using Microsoft.AspNetCore.Identity
@using Expense_Tracker_App.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<style>
    .auth-nav {
        position: fixed;
        padding: 0.5rem 0 ;        
        top: 0;
        left: 0;
        right: 0;
        background: rgba(26, 31, 37, 0.95);
        backdrop-filter: blur(10px);
        z-index: 1000;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);

    }

    .auth-container {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
    }

    .brand-logo {
        height: 35px;
        width: auto;
    }

    .brand-name {
        color: #fff;
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0;
    }

    .nav-links {
        display: flex;
        gap: 1.5rem;
        align-items: center;
    }

    .nav-link {
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        color: #fff;
    }

    .auth-buttons {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .auth-link {
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .login-btn {
        color: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .login-btn:hover {
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        border-color: rgba(255, 255, 255, 0.3);
    }

    .register-btn {
        background: linear-gradient(135deg, #4dabf7 0%, #3b82f6 100%);
        color: white;
        border: none;
    }

    .register-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }


    @@media (max-width: 768px) {
        .auth-nav {
            padding: 1rem;
        }

        .brand-name {
            display: none;
        }

        .nav-links {
            display: none;
        }

        .auth-buttons {
            gap: 0.5rem;
        }

        .auth-link {
            padding: 0.5rem 1rem;
            font-size: 0.8rem;
        }

        .welcome-text {
            display: none;
        }
    }
</style>


    <nav class="auth-nav">
        <div class="auth-container">
            <a asp-controller="Home" asp-action="Index" class="brand">
               @*  <img src="~/images/logo.png" alt="Logo" class="brand-logo" /> *@
                <h1 class="brand-name">Theo dõi chi tiêu</h1>
            </a>
            <div class="nav-links">
                <a asp-controller="Home" asp-action="About" class="nav-link">Về chúng tôi</a>
                <a asp-controller="Home" asp-action="Contact" class="nav-link">Liên hệ</a>
                <a asp-controller="Home" asp-action="Terms" class="nav-link">Điều khoản</a>
                <a asp-controller="Settings" asp-action="Index" class="nav-link">Cài đặt</a>
            </div>
            <div class="auth-buttons">
                <a asp-controller="Account" asp-action="Login" class="auth-link login-btn">
                    Đăng nhập
                </a>
                <a asp-controller="Account" asp-action="Register" class="auth-link register-btn">
                    Tạo tài khoản
                </a>
            </div>
        </div>
    </nav>