@using Microsoft.AspNetCore.Identity
@using Expense_Tracker_App.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-flex align-items-center">
        <div class="d-flex align-items-center">
            <span class="me-3">Hello, @UserManager.GetUserName(User)!</span>
            <button type="submit" class="btn btn-outline-light">Log out</button>
        </div>
    </form>
}
else
{
    <div class="dock-target">
        <nav class="navbar sticky-top">
            <div>
                <a asp-area="" asp-controller="Account" asp-action="Register" style="color:aliceblue">Register</a>
                <a asp-area="" asp-controller="Account" asp-action="Login" style="color:aliceblue">Log in</a>
            </div>
        </nav>
    </div>
}


