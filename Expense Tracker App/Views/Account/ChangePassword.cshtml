@model Expense_Tracker_App.Models.AccountViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #1a1f25 0%, #17181f 100%);
    }

    .login-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 3rem;
        width: 100%;
        max-width: 450px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    }

    .login-title {
        color: #ffffff;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 2rem;
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        color: #e9ecef;
        font-size: 0.9rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block;
    }

    .e-input-group {
        background: rgba(255, 255, 255, 0.05) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        border-radius: 10px !important;
        overflow: hidden;
    }

    .e-input {
        color: #ffffff !important;
        padding: 1rem !important;
        font-size: 1rem !important;
        background: transparent !important;
    }

    .validation-error {
        color: #ff6b6b;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    .submit-btn {
        width: 100%;
        padding: 1rem !important;
        border-radius: 10px !important;
        font-size: 1rem !important;
        font-weight: 600 !important;
        background: linear-gradient(135deg, #4dabf7 0%, #3b82f6 100%) !important;
        border: none !important;
        color: white !important;
        margin-top: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease !important;
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3) !important;
    }

    #password-requirements {
        list-style: none;
        padding: 0.75rem;
        margin: 0.5rem 0;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        font-size: 0.85rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    #password-requirements li {
        color: rgba(255, 255, 255, 0.7);
        padding: 0.25rem 0;
    }

    #password-requirements li::before {
        content: "•";
        margin-right: 0.5rem;
        color: rgba(255, 255, 255, 0.4);
    }
</style>

<div class="login-container">
    <div class="login-card">
        <h1 class="login-title">Đổi mật khẩu</h1>
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-error"></div>
            
            <div class="form-group">
                <label class="form-label">Mật khẩu hiện tại</label>
                <ejs-textbox type="password" 
                            ejs-for="CurrentPassword" 
                            placeholder="Enter your current password"
                            cssClass="modern-input">
                </ejs-textbox>
                <span asp-validation-for="CurrentPassword" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Mật khẩu mới</label>
                <ejs-textbox type="password" 
                            ejs-for="NewPassword" 
                            id="password"
                            placeholder="Enter your new password"
                            cssClass="modern-input">
                </ejs-textbox>
                <ul id="password-requirements">
                    <li>Minimum length of 6 characters</li>
                    <li>At least one uppercase letter</li>
                    <li>At least one lowercase letter</li>
                    <li>At least one digit</li>
                    <li>At least one special character</li>
                </ul>
                <span asp-validation-for="NewPassword" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Xác nhận mật khẩu mới</label>
                <ejs-textbox type="password" 
                            ejs-for="ConfirmPassword" 
                            placeholder="Confirm your new password"
                            cssClass="modern-input">
                </ejs-textbox>
                <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
            </div>

            <ejs-button id="submit" 
                       content="Change Password" 
                       cssClass="submit-btn" 
                       type="submit">
            </ejs-button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/resetPassword.js"></script>
} 