
@model Expense_Tracker_App.Models.Transaction

@{
    ViewData["PageTitle"] = Model.TransactionId == 0 ? "Create a new Transaction" : "Edit Transaction";
    ViewData["PageActionText"] = "Back to List";
    ViewData["PageActionUrl"] = "/transactions";
}

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#212b36">
            <form asp-action="CreateOrEdit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger" ></div>

                <input type="hidden" name="TransactionId" asp-for="@Model.TransactionId" />

                <div class="mb-3">
                    <ejs-numerictextbox id="amount" ejs-for="Amount"
                                        placeholder="Amount" floatLabelType="Always"
                                        min=0 format="n2" decimals="2"></ejs-numerictextbox>
                    <span asp-validation-for="Amount" class="text-danger fs-6"></span>
                </div>
                @* Note *@
                <div class="mb-3">
                    <ejs-textbox id="note" placeholder="Note" ejs-for="Note"
                                 floatLabelType="Always" multiline="true" rows="3"></ejs-textbox>
                  
                </div>

                <div class="mb-3">
                    <ejs-datepicker id="date" ejs-for="TransactionDate"
                    placeholder="Date" floatLabelType="Always"
                    format="yyyy-MM-dd" value="@Model.TransactionDate"></ejs-datepicker>
                    <span asp-validation-for="TransactionDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-dropdownlist id="ddlCategory" ejs-for="CategoryId"
                                      dataSource="@ViewBag.Categories" placeholder="Category"
                                      floatLabelType="Always" allowFiltering="true" ignoreAccent="true"
                                      filterType="Contains" popupHeight="220px">
                        <e-dropdownlist-fields value="CategoryId" text="Title"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                    <span asp-validation-for="CategoryId" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                  <ejs-uploader id="uploadFiles" name="billImage" autoUpload="false"></ejs-uploader>
                </div>
                <ejs-button id="submit" content="Submit" type="Submit" cssClass="e-success"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center"
        style="background-color:#212b36">
            <i class="fa-solid fa-money-bill-transfer fa-2xl"></i>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
