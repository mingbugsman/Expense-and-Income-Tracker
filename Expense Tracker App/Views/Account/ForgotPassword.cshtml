@model Expense_Tracker_App.Models.AccountViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="row justify-content-center mt-2">
    <div class="col-md-4">
        <div class="widget p-4" style="background-color:#212b36">
            <h2 class="text-center mb-4">Quên mật khẩu</h2>
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <ejs-textbox id="Email" ejs-for="Email" 
                                placeholder="Email" 
                                floatLabelType="Always"
                                type="email"></ejs-textbox>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Gửi link đặt lại mật khẩu</button>
                </div>
            </form>
            <div class="mt-3 text-center">
                <p>
                    <a asp-action="Login">Quay lại đăng nhập</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 