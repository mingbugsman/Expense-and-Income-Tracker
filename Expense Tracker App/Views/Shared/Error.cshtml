@model ErrorViewModel
@{
    ViewData["Title"] = "Lỗi";
}

<div class="error-container">
    <div class="error-content">
        <h1 class="error-title">Lỗi</h1>
        <h2 class="error-subtitle">Đã xảy ra lỗi trong quá trình xử lý yêu cầu của bạn.</h2>

        @if (Model.ShowRequestId)
        {
            <p class="error-details">
                <strong>Mã yêu cầu:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <div class="error-actions">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-house-door me-2"></i>Quay lại trang chủ
            </a>
            <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-primary">
                <i class="bi bi-envelope me-2"></i>Liên hệ hỗ trợ
            </a>
        </div>

        <div class="error-help">
            <h3>Bạn có thể thử:</h3>
            <ul>
                <li>Làm mới trang</li>
                <li>Xóa bộ nhớ cache của trình duyệt</li>
                <li>Kiểm tra kết nối internet</li>
                <li>Liên hệ với đội ngũ hỗ trợ nếu vấn đề vẫn tiếp tục</li>
            </ul>
        </div>
    </div>
</div>

<style>
    .error-container {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .error-content {
        max-width: 600px;
        text-align: center;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 3rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .error-title {
        color: #dc3545;
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .error-subtitle {
        color: #fff;
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .error-details {
        background: rgba(255, 255, 255, 0.05);
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 2rem;
    }

    .error-details code {
        background: rgba(255, 255, 255, 0.1);
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        color: #fff;
    }

    .error-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .error-help {
        text-align: left;
        background: rgba(255, 255, 255, 0.05);
        padding: 1.5rem;
        border-radius: 10px;
    }

    .error-help h3 {
        color: #fff;
        margin-bottom: 1rem;
    }

    .error-help ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .error-help li {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 0.5rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .error-help li:before {
        content: "•";
        color: #4dabf7;
        position: absolute;
        left: 0;
    }

    @@media (max-width: 768px) {
        .error-content {
            padding: 2rem;
        }

        .error-title {
            font-size: 2.5rem;
        }

        .error-subtitle {
            font-size: 1.2rem;
        }

        .error-actions {
            flex-direction: column;
        }
    }
</style>
