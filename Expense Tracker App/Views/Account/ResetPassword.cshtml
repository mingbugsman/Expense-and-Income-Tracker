
@model Expense_Tracker_App.Models.AccountViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #1a1f25 0%, #17181f 100%);
    }

    .login-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 3rem;
        width: 100%;
        max-width: 450px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        transition: transform 0.3s ease;
    }

    .login-card:hover {
        transform: translateY(-5px);
    }

    .login-title {
        color: #ffffff;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 2rem;
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        color: #e9ecef;
        font-size: 0.9rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block;
    }

    .e-input-group {
        background: rgba(255, 255, 255, 0.05) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        border-radius: 10px !important;
        overflow: hidden;
    }

    .e-input {
        color: #ffffff !important;
        padding: 1rem !important;
        font-size: 1rem !important;
        background: transparent !important;
    }

    .e-input::placeholder {
        color: rgba(255, 255, 255, 0.5) !important;
    }

    .validation-error {
        color: #ff6b6b;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    .validation-summary {
        color: #ff6b6b;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        padding: 0.5rem;
        border-radius: 5px;
        background: rgba(255, 107, 107, 0.1);
    }

    .submit-btn {
        width: 100%;
        padding: 1rem !important;
        border-radius: 10px !important;
        font-size: 1rem !important;
        font-weight: 600 !important;
        background: linear-gradient(135deg, #4dabf7 0%, #3b82f6 100%) !important;
        border: none !important;
        color: white !important;
        margin-top: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease !important;
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3) !important;
    }

    #password-requirements {
        list-style: none;
        padding: 0;
        margin: 0.5rem 0;
    }

    #password-requirements li {
        color: rgba(255, 255, 255, 0.7);
        padding: 0.25rem 0;
        font-size: 0.85rem;
    }

    #password-requirements li::before {
        content: "•";
        margin-right: 0.5rem;
        color: rgba(255, 255, 255, 0.4);
    }

    .links-container {
        display: flex;
        justify-content: center;
        margin: 1rem 0;
    }

    .auth-link {
        color: #4dabf7;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .auth-link:hover {
        color: #3b82f6;
        text-decoration: underline;
    }
</style>
<div class="login-container">
    <div class="login-card">
        <h1 class="login-title">Đặt Lại Mật Khẩu</h1>
        <form asp-action="ResetPassword" method="post">
            <input asp-for="Code" type="hidden" />
            <div class="form-group">
                <label class="form-label">Email</label>
                <ejs-textbox id="email" 
                            ejs-for="Email"
                            placeholder="Nhập email của bạn"
                            cssClass="modern-input">
                </ejs-textbox>
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Mật Khẩu Mới</label>
                <ejs-textbox type="password" 
                            ejs-for="Password" 
                            id="password"
                            placeholder="Nhập mật khẩu mới"
                            cssClass="modern-input">
                </ejs-textbox>
                <ul id="password-requirements">
                    <li>Tối thiểu 6 ký tự</li>
                    <li>Ít nhất một chữ cái viết hoa</li>
                    <li>Ít nhất một chữ cái viết thường</li>
                    <li>Ít nhất một chữ số</li>
                    <li>Ít nhất một ký tự đặc biệt</li>
                </ul>
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Xác Nhận Mật Khẩu</label>
                <ejs-textbox type="password" 
                            ejs-for="ConfirmPassword" 
                            id="confirmPassword"
                            placeholder="Xác nhận mật khẩu mới"
                            cssClass="modern-input">
                </ejs-textbox>
                <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
            </div>

            <ejs-button id="submit" 
                       content="Đặt Lại Mật Khẩu" 
                       cssClass="submit-btn" 
                       type="submit">
            </ejs-button>

            <div class="links-container">
                <a href="/Account/Login" class="auth-link">Quay Lại Đăng Nhập</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/resetPassword.js"></script>
} 